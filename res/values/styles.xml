<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- DefaultTheme -->
    <style name="DefaultTheme" parent="AppBaseTheme"></style>

    <!-- Don't forget it's Blue and green theme -->
    <style name="BlueAndGreenTheme" parent="DefaultTheme">
        <item name="colorBlue">#00d2ff</item>
        <item name="colorRed">#e33c3c</item>
        <item name="buttonBackground1">@drawable/blue_button_style</item>
        <item name="buttonTextColor1">@drawable/blue_button_text_style</item>
        <item name="bigButtonStyle1">@style/bgBigBlueButton</item>
    </style>

    <color name="bg_color_red">#e33c3c</color>
    <color name="bg_color_blue">#00d2ff</color>
    <color name="bg_btn_color_pressed">#90d9ff</color>
    <color name="bg_btn_color_default">#1088c6</color>
    <color name="bg_btn_color_border">#0f3d55</color>
    <color name="bg_black">#000000</color>
    <color name="bg_white">#ffffff</color>
    
    <style name="bgBigBlueButton">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/buttonBackground1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">?attr/buttonTextColor1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Yellow And Orange Theme -->
    <style name="YellowAndOrangeTheme" parent="DefaultTheme"></style>

    <!-- Dark Ocean Theme -->
    <style name="DarkOceanTheme" parent="DefaultTheme"></style>

</resources>
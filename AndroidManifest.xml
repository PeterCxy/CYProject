<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ultech.cyproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.ultech.cyproject.StandardMode"
            android:label="@string/standard_mode_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ultech.cyproject.QueryMode"
            android:label="@string/query_mode_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ultech.cyproject.ChallengeMode"
            android:label="@string/challenge_mode_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ultech.cyproject.HighRecord"
            android:label="@string/high_record_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ultech.cyproject.StandardModeHint"
            android:label="@string/standard_mode_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ultech.cyproject.StandardModeLog"
            android:label="@string/standard_mode_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ultech.cyproject.PersonalSettings"
            android:label="@string/personal_settings_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ultech.cyproject.HelpActivity"
            android:label="@string/help_activity_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.ultech.cyproject.AboutUs"
            android:label="@string/about_us_name"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>